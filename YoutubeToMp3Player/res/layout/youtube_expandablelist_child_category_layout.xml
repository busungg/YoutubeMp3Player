<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dip" >

    <LinearLayout
        android:id="@+id/expandablelist_child_download_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:gravity="center_horizontal"
        android:orientation="vertical" >

        <Button
            android:id="@+id/expandablelist_child_download"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/expandable_download_text" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/expandablelist_child_convert_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="10dip"
        android:layout_toLeftOf="@id/expandablelist_child_download_layout"
        android:gravity="center_horizontal"
        android:orientation="vertical" >

        <Button
            android:id="@+id/expandablelist_child_convert"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/expandable_convert_text" />
    </LinearLayout>

    <TextView
        android:id="@+id/expandablelist_child_category"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_toLeftOf="@id/expandablelist_child_convert_layout"
        android:text="expandablelist_child_description" />

</RelativeLayout>